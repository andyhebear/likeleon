<Window x:Class="Mogitor.Windows.InputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="InputDialog" SizeToContent="WidthAndHeight">
    <DockPanel Margin="10">
        <StackPanel Margin="0,10" DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="OK" Width="60" x:Name="btnOk" Click="btnOk_Click" IsDefault="True" />
            <Button Content="Cancel" Margin="10,0,0,0" Width="60" x:Name="btnCancel" IsCancel="True" />
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Label" x:Name="tblkLabel" Margin="0,5" />
            <TextBox Text="Text content" x:Name="tboxInput" MinWidth="230" />
        </StackPanel>
    </DockPanel>
</Window>
