<Window x:Class="MogreEditor.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:MogreCtrls="clr-namespace:MogreEditor.Controls"
    Title="Mogre Editor" Height="300" Width="300"
    Loaded="Window_Loaded" Background="Transparent">
    <Grid>
        <Image x:Name="renderTargetControl" Stretch="Fill"
               SizeChanged="renderTargetControl_SizeChanged"
               MouseDown="renderTargetControl_MouseDown">
            <Image.Source>
                <MogreCtrls:OgreImage x:Name="ogreImage"
                                      Initialized="ogreImage_Initialized"
                                      PreRender="ogreImage_PreRender"
                                      ResourceLoadItemProgress="ogreImage_ResourceLoadItemProgress" />
            </Image.Source>
        </Image>
    </Grid>
</Window>
