<UserControl x:Class="Mogitor.Controls.MaterialView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <TreeView x:Name="treeControl"
              MouseRightButtonDown="treeControl_MouseRightButtonDown"
              SelectedItemChanged="treeControl_SelectedItemChanged">
        <TreeView.Resources>
            <Style TargetType="TreeViewItem">
                <Setter Property="HeaderTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="1">
                                <Image Source="{Binding Path=Icon}" Height="16" />
                                <TextBlock Text="{Binding Path=Name}" Margin="5,0" />
                            </StackPanel>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </TreeView.Resources>
    </TreeView>
</UserControl>
